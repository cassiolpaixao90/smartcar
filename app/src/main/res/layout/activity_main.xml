<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <br.com.cesaredu.smartcar.views.ControllerView
        android:id="@+id/game"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <br.com.cesaredu.smartcar.views.JoyStick
        android:id="@+id/joy1"
        android:layout_width="254dp"
        android:layout_height="226dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btn_l1"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape"
        android:text="@string/L1"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_r1"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="520dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape"
        android:text="@string/R1"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="240dp"
        android:layout_marginTop="60dp"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:text="Testando" />

    <Button
        android:id="@+id/btn_a"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="355dp"
        android:layout_marginTop="153dp"
        android:background="@drawable/shape"
        android:text="@string/A"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_b"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="405dp"
        android:layout_marginTop="95dp"
        android:background="@drawable/shape"
        android:text="@string/B"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_x"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="475dp"
        android:layout_marginTop="75dp"
        android:background="@drawable/shape"
        android:text="@string/X"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_y"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="548dp"
        android:layout_marginTop="97dp"
        android:background="@drawable/shape"
        android:text="@string/Y"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_power"
        android:layout_width="155dp"
        android:layout_height="46dp"
        android:layout_marginStart="241dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/shapebtnpower"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="power"
        android:textAlignment="center"
        android:textColor="@color/white" />

    <br.com.cesaredu.smartcar.views.JoyStick
        android:id="@+id/joy2"
        android:layout_width="264dp"
        android:layout_height="226dp"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="50dp" />

</FrameLayout>